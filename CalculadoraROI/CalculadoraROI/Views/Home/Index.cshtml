            <div class="form-group d-flex flex-column">
                <label asp-for="Onboarding" class="control-label pb-1" style="font-size: 0.8em; color: #666666;"></label>
                <select asp-for="Onboarding" class="border-0 p-0 mb-3" style="background-color: #f6f6f6; outline: 0; color: #666666;">
                    <option disabled selected value="onboarding">Selecione</option>
                    <option value="Físico + Digital">Físico + Digital</option>
