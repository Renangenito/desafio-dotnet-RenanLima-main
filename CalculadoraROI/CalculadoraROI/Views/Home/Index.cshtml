@model CalculadoraROI.Models.Calculadora

@{
    ViewData["Title"] = "Index";
}


<div class="row d-flex justify-content-end">
    <div class="col-md-4 rounded p-5" style="background-color: #ffffff;">
        <h5 class="fw-bold">Calculadora - ROI</h5>
        <p class="fw-bold" style="color: #938f8f; font-size: 0.8em; ">Preencha os campos abaixo e nosso time entrará em contato enviando o cálculo via email:</p>
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
            <label asp-for="Id" class="control-label"></label>*@
            <input asp-for="Id" class="form-control border-0" style="background-color: #f6f6f6;" hidden />
            @*    <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Nome" class="control-label pb-1" style="font-size: 0.8em; color: #666666;"></label>
                <input asp-for="Nome" class="form-control border-0 p-0 mb-3" style="background-color: #f6f6f6;" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label pb-1" style="font-size: 0.8em; color: #666666;"></label>
                <input asp-for="Email" type="email" class="form-control border-0 p-0 mb-3" style="background-color: #f6f6f6;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa" class="control-label pb-1" style="font-size: 0.8em; color: #666666;"></label>
                <input asp-for="Empresa" class="form-control border-0 p-0 mb-3" style="background-color: #f6f6f6;" />
                <span asp-validation-for="Empresa" class="text-danger"></span>
            </div>
